        <ScrollViewer Height="141" VerticalAlignment="Top" Margin="40,123,40,0" VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="textBox"   TextWrapping="Wrap"  Background="#FF1E1E1E" FontFamily="Raavi" TextAlignment="Left"/>
        </ScrollViewer>
        <Label x:Name="Lable_PPC" Content="Feedback/Output:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40,94,0,0" FontFamily="Raavi" Width="196" Height="30" FontWeight="Bold" FontSize="16"/>
        <Button x:Name="Back_H" Content="OK" Style="{StaticResource Button_BH}" Height="22" Margin="217,0,217,45" VerticalAlignment="Bottom" Click="Ok"/>
